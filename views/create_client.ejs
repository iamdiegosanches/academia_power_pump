<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criar cliente</title>
    <link rel="stylesheet" href="/public/css/style_lesson.css">
</head>
<body>
    <header>
        <%- include('partials/header.ejs') %>
    </header>
      
    <div class="card-container">
        <div class="child">
          <h2>Criar Cliente</h2>
          <div class="card-input-lesson">
            <form id="createClientForm" method="POST" action="/clients">
                <label for="name">Nome:</label>
                <input type="text" id="name" name="name" required><br>
      
                <label for="email">E-mail:</label>
                <input type="email" id="email" name="email" required><br>
      
                <label for="cpf">CPF:</label>
                <input type="text" id="cpf" name="cpf" required><br>
      
                <label for="age">Idade:</label>
                <input type="number" id="age" name="age" required><br>
      
                <label for="sex">Sexo:</label>
                <select id="sex" name="sex" required>
                    <option value="Masculino">Masculino</option>
                    <option value="Feminino">Feminino</option>
                    <option value="Outro">Outro</option>
                </select><br>
      
                <label for="isPaid">Pagamento Efetuado:</label>
                <input type="hidden" name="isPaid" value="false">
                <input type="checkbox" id="isPaidCheckbox" name="isPaid" value="true"><br>

                <div class="time-hours">
                    <label for="data">Data do pagamento:</label>
                    <input type="date" id="data" name="data" required value="YYYY-MM-DD"><br>
                </div>                                  
      
                <button type="submit">Criar Cliente</button>
            </form>
          </div>
        </div>
        <div id="json-container">
            <% data.forEach(client => { %>
              <div class="json-item" data-id="<%= client._id %>">
                <p><strong>ID:</strong> <%= client._id %></p>
                <p><strong>Nome:</strong> <%= client.name %></p>
                <p><strong>Idade:</strong> <%= client.age %></p>
                <p><strong>E-mail:</strong> <%= client.email %></p>
                <p><strong>CPF:</strong> <%= client.cpf %></p>
                <p><strong>Sexo:</strong> <%= client.sex %></p>
                <p><strong>Pagamento Efetuado:</strong> <%= client.isPaid ? 'Sim' : 'NÃ£o' %></p>
              </div>
            <% }); %>
        </div>
    </div>
    
    <script src="/public/js/script.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>
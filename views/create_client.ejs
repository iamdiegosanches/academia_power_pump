<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Criar cliente</title>
    <link rel="stylesheet" href="/public/css/style_client.css">
</head>
<body>
    <header>
        <%- include('partials/header.ejs') %>
    </header>
      
    <div class="card-container">
        <div class="child">
          <h2>Criar Cliente</h2>
          <div class="card">
            <form id="createClientForm" method="POST" action="/clients">
                <label for="name">Nome:</label>
                <input type="text" id="name" name="name" required><br>
      
                <div class="email">
                  <label for="email">Email:</label>
                  <input type="email" id="email" name="email" required><br>
                </div>
      
                <div class="cpf">
                  <label for="cpf">CPF:</label>
                  <input type="text" id="cpf" name="cpf" required><br>
                </div>
      
                <label for="age">Idade:</label>
                <input type="number" id="age" name="age" required><br>
      
                <label for="sex">Sexo:</label>
                <select id="sex" name="sex" required>
                    <option value="Masculino">Masculino</option>
                    <option value="Feminino">Feminino</option>
                    <option value="Outro">Outro</option>
                </select><br>
      
                <div class="pagamento">
                  <label for="isPaidCheckbox">Pagamento Efetuado:</label>
                  <input type="checkbox" id="isPaidCheckbox" name="isPaid" value="true">
                </div>

                <div class="time-hours">
                    <label for="data">Data do pagamento:</label>
                    <input type="date" id="data" name="data" required><br>
                </div>                                  
      
                <button type="submit">Criar Cliente</button>
            </form>
          </div>
        </div>
        <div class="child">
          <h2>Clientes Cadastrados</h2>
          <div class="client-container">
                <div class="client-list">
                    <% data.forEach(client => { %>
                        <div class="client-item client-card">
                            <p><strong>Nome:</strong> <%= client.name %></p>
                            <p><strong>E-mail:</strong> <%= client.email %></p>
                            <p><strong>CPF:</strong> <%= client.cpf %></p>
                            <p><strong>Idade:</strong> <%= client.age %></p>
                            <p><strong>Sexo:</strong> <%= client.sex %></p>
                            <p><strong>Pagamento Efetuado:</strong> <%= client.isPaid ? 'Sim' : 'NÃ£o' %></p>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
    
    <script src="/public/js/script.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script>
      const cpfInput = document.querySelector('#cpf');
    
      cpfInput.addEventListener('input', (event) => {
        let value = event.target.value;
        value = value.replace(/\D/g, '');
        value = value.replace(/(\d{3})(\d)/, '$1.$2');
        value = value.replace(/(\d{3})(\d)/, '$1.$2');
        value = value.replace(/(\d{3})(\d{1,2})/, '$1-$2');
        event.target.value = value;
      });
    </script>
</body>
</html>
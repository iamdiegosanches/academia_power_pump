<!DOCTYPE html>
<html>
<head>
  <title>Lessons</title>
  <link rel="stylesheet" href="/public/css/style_lesson_page.css">
</head>

<body>
  <header>
    <%- include('partials/header.ejs') %>
  </header>
  
  <div class="container">
    <h2>Lessons</h2>
    <div class="lesson-container">
        <div class="lessons-list">
          <% data.forEach(lesson => { %>
            <div class="lesson-item lesson-card">
              <p><strong>Title:</strong> <%= lesson.title %></p>
              <p><strong>Description:</strong> <%= lesson.description %></p>
              <p><strong>Date:</strong> <%= lesson.data %></p>
              <p><strong>Time:</strong> <%= lesson.time %></p>
              <p><strong>Personal:</strong> <%= lesson.personal.name %></p>
              <div class="lesson-actions action-buttons">
                <a href="/lessons/edit/<%= lesson._id %>" class="button">Edit</a>
                <a href="/lessons/delete/<%= lesson._id %>" class="button">Delete</a>
              </div>
            </div>
          <% }); %>
        </div>
        
      </div>
      <a href="/create_lessons" class="button">Create Lesson</a>
  </div>
  <div class="div-button">
    
  </div>
  

  <script src="/public/js/script.js"></script>
  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</body>
</html>

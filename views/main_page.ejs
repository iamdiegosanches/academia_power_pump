<!-- index.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>JSON Display</title>
    <link rel="stylesheet" href="/public/style_login.css"/>
    <style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh; /* Altura mínima de 100% da altura da janela de visualização */
        background: #ffffff;
    }
    </style>
</head>
<body>
    <form action="/search_exercise" method="GET">
        <label for="cpf">Search by CPF:</label>
        <input type="text" id="cpf" name="cpf" placeholder="Enter client CPF" required>
        <button type="submit">Search</button>
    </form>

    <div id="json-container">
        <% data.forEach(item => { %>
            <div class="json-item">
                <h2><%= item.title %></h2>
                <p><%= item.description %></p>
                <p>Data: <%= item.data %></p>
                <p>Hora: <%= item.time %></p>
                <p>Treinador: <%= item.personal.name %></p>
            </div>
        <% }); %>
    </div>

    
</body>
</html>
